menu "Weather Control Configuration"

    menu "Hardware Pin Configuration"
        comment "Default values from components/weather_common/include/hardware_config.h"

        config WEATHER_CONTROL_GPIO_PIN
            int "Control GPIO Pin"
            default 2
            range 0 39
            help
                GPIO pin number for the main control output.
                This pin will be activated based on weather conditions and time schedule.
                Default: HW_GPIO_CONTROL_PIN from hardware_config.h

        config WEATHER_CONTROL_LED_PIN_1
            int "LED Pin 1"
            default 4
            range 0 39
            help
                GPIO pin number for LED 1 (cloud cover visualization).

        config WEATHER_CONTROL_LED_PIN_2
            int "LED Pin 2"
            default 5
            range 0 39
            help
                GPIO pin number for LED 2 (cloud cover visualization).

        config WEATHER_CONTROL_LED_PIN_3
            int "LED Pin 3"
            default 16
            range 0 39
            help
                GPIO pin number for LED 3 (cloud cover visualization).

        config WEATHER_CONTROL_LED_PIN_4
            int "LED Pin 4"
            default 17
            range 0 39
            help
                GPIO pin number for LED 4 (cloud cover visualization).

        config WEATHER_CONTROL_LED_PIN_5
            int "LED Pin 5"
            default 18
            range 0 39
            help
                GPIO pin number for LED 5 (cloud cover visualization).

        config WEATHER_CONTROL_I2C_SDA
            int "I2C SDA Pin"
            default 21
            range 0 39
            help
                GPIO pin number for I2C SDA (DS3231 RTC module).

        config WEATHER_CONTROL_I2C_SCL
            int "I2C SCL Pin"
            default 22
            range 0 39
            help
                GPIO pin number for I2C SCL (DS3231 RTC module).

    endmenu

    menu "Location Settings"

        config WEATHER_DEFAULT_LATITUDE
            string "Default Latitude"
            default "52.23"
            help
                Default latitude for weather forecast location.
                Can be overridden in config.h if needed.
                Example: 52.23 for Warsaw, Poland

        config WEATHER_DEFAULT_LONGITUDE
            string "Default Longitude"
            default "21.01"
            help
                Default longitude for weather forecast location.
                Can be overridden in config.h if needed.
                Example: 21.01 for Warsaw, Poland

    endmenu

    menu "Weather Check Schedule"

        config WEATHER_CHECK_HOUR
            int "Weather Check Hour (24h format)"
            default 16
            range 0 23
            help
                Hour of the day (24h format) when the device checks weather forecast.
                Default is 16 (4 PM).

    endmenu

